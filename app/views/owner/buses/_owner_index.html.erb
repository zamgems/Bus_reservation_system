<h3> Your Current Status: <%= current_user.status.capitalize %> </h3>
<% if current_user.status=="approved" %>

  <%- model_class = Bus -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:'#') %></th>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:registration_no) %></th>
        <th><%= model_class.human_attribute_name(:source) %></th>
        <th><%= model_class.human_attribute_name(:destination) %></th>
        <th><%= model_class.human_attribute_name(:total_seats) %></th>
        
        <th><%= model_class.human_attribute_name(:status) %></th>
        <th> Book </th>
        <% if current_user.owner? %>   
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        <% end %>  

      </tr>
    </thead>
    <tbody>
      <% i = 1 %>
      <% @buses.each do |bus| %>
        <% if bus.unavailable? and bus.owner.user!=current_user
          next
        end %>
        <tr>
          <td><%= i %></td>
          <td><%= bus.name %></td>
          <td><%= bus.registration_no %></td>
          <td><%= bus.source %></td>
          <td><%= bus.destination %></td>
          <td><%= bus.total_seats %></td>
          
          <td><%= bus.status %></td>
          
          <td>
            <% if bus.available? %>
              <%= link_to "Book", new_bus_reservation_path(bus) %></td>
            <% end %>
          <td>
            <% if current_user == bus.owner.user %>
              <%= link_to t('.show', :default => t("helpers.links.show")),
                          bus_path(bus), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_bus_path(bus), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          bus_path(bus),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger delete',
                          :remote => true %>
            <% end %>
          </td>
          <% i += 1 %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_bus_path,
              :class => 'btn btn-primary' %>

<% else %>

  <h4> Your current status is '<%= current_user.status %>', you are not allowed to perform any task </h4>

<% end %>
  